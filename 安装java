1.cd /usr/local/
2.mkdir java
3.cd java
4.rz jdk-8u131-linux-x64.tar.gz
5.tar -xvf jdk-8u131-linux-x64.tar.gz
6.vim /etc/profile
7.再行尾加上JAVA_HOME=/usr/local/java/jdk1.8.0_131       
            CLASSPATH=$JAVA_HOME/lib/
            PATH=$PATH:$JAVA_HOME/bin
8.export PATH JAVA_HOME CLASSPATH
9.source /etc/profile
10.java -version  验证